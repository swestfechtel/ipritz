<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_flight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        tools:context=".NewFlightActivity"> <!--android:layout_margin="20dp"-->

        <Button
            android:id="@+id/flight_button"
            style="@style/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/price_title"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="@color/colorButton"
            android:onClick="startService"
            android:paddingTop="15dp"
            android:paddingBottom="20dp"
            android:text="Order now"
            android:textSize="20dp" />


        <LinearLayout
            android:id="@+id/route_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"> <!--android:layout_below="@id/btn_l" -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/flight_from"
                    style="@style/h6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="From: " />

                <AutoCompleteTextView
                    android:id="@+id/flight_text_from"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorSearchBar"
                    android:completionThreshold="1"
                    android:hint="Enter a start address"
                    android:inputType="text"
                    android:popupBackground="@color/colorPrimary"
                    android:text="My location" />

                <ImageButton
                    android:id="@+id/flight_add_stopover"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#FFFFFF"
                    app:srcCompat="@android:drawable/ic_input_add" />

                <ImageButton
                    android:id="@+id/flight_remove_stopover"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#FFFFFF"
                    app:srcCompat="@drawable/ic_remove" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/flight_stopover"
                    style="@style/h6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="Stopover: " />

                <EditText
                    android:id="@+id/flight_text_stopover"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:background="@color/colorSearchBar"
                    android:hint="Enter a stopover address"
                    android:inputType="text" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/flight_to"
                    style="@style/h6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="To: " />

                <EditText
                    android:id="@+id/flight_text_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorSearchBar"
                    android:hint="Enter a destination address"
                    android:imeOptions="actionSearch"
                    android:inputType="text" />

                <ImageButton
                    android:id="@+id/btn_switch_start_end_flight"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#FFFFFF"
                    app:srcCompat="@drawable/ic_compare_arrows_black_24dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/flight_departure_date"
                    style="@style/h6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Departure date: " />

                <EditText
                    android:id="@+id/flight_text_departure_date"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="date"
                    android:textAlignment="center" />

                <ImageButton
                    android:id="@+id/button_departure_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="#FFFFFF"
                    app:srcCompat="@drawable/ic_date" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/flight_departure_time"
                    style="@style/h6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Departure at: " />

                <EditText
                    android:id="@+id/flight_text_departure_time"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="time"
                    android:textAlignment="center" />

                <ImageButton
                    android:id="@+id/button_departure_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#FFFFFF"
                    app:srcCompat="@drawable/ic_time" />

                <ImageButton
                    android:id="@+id/search_route_flight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#FFFFFF"
                    android:src="@drawable/ic_search_blue" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/flight_arrival_time"
                    style="@style/h6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arrival at: " />

                <TextView
                    android:id="@+id/flight_text_arrival_time"
                    style="@style/h6"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="5dp"
                    android:text="--:--"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_below="@id/route_titles"
            android:layout_marginTop="180dp"
            android:layout_weight="0.6">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_alignStart="@+id/card"
                android:layout_alignTop="@+id/card"
                tools:context=".MainActivity" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card"
            android:orientation="horizontal">

            <TextView
                style="@style/h6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Price: " />

            <TextView
                android:id="@+id/price"
                style="@style/h6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="-- â‚¬"
                android:textStyle="bold" />

        </LinearLayout>

        <!--<LinearLayout
            android:id="@+id/btn_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/flightBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:src="@drawable/ic_arrow_back_black_24dp" />
        </LinearLayout>-->

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>